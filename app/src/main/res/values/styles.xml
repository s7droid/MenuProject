<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/TransitionAnimation.Activity</item>
    </style>

    <style name="TransitionAnimation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Menu_Button_Orange" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/square_orange_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">@color/menu_main_orange_dark</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="Menu_Text_View_Shadow" parent="@android:style/Widget.TextView">
        <item name="android:shadowColor">@color/menu_main_orange_dark</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
    </style>

    <style name="Menu_Button_Rounded_Orange_With_Selector">
        <item name="android:background">@drawable/rounded_orange_button_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/orange_text_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:height">25dp</item>
    </style>

    <style name="Menu_Button_Rounded_Gray_With_Selector">
        <item name="android:background">@drawable/rounded_gray_button_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/gray_text_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:height">25dp</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>

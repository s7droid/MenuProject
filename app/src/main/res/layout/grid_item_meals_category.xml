<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/imageviewCategoryMealsGridViewItemImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop" />

    <com.usemenu.MenuAndroidApplication.views.MenuTextView
        android:id="@+id/textviewCategoryMealsGridViewItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imageviewCategoryMealsGridViewItemImage"
        android:layout_marginTop="5dp"
        android:text="Category example"
        android:textColor="@color/menu_main_gray"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
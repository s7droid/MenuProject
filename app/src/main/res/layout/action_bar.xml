<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_action_bar" >

    <com.usemenu.MenuAndroidApplication.views.MenuButton
        android:id="@+id/buttonActionBarBack"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:drawableLeft="@drawable/icon_left"
        android:drawablePadding="8dp"
        android:gravity="center_vertical|start"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/action_bar_back"
        android:textColor="@color/menu_main_gray"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButtonActionBarMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/menu_icon" />

    <com.usemenu.MenuAndroidApplication.views.MenuButton
        android:id="@+id/buttonActionBarForward"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/icon_right"
        android:gravity="center_vertical|end"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/action_bar_tutorial"
        android:textColor="@color/menu_main_gray"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="invisible"
    android:id="@+id/scrollViewMealDetailsContainer"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imageviewMealsDetailsActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <com.usemenu.MenuAndroidApplication.views.AddCommentView
                android:id="@+id/addCommentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="50dp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layoutLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp" >

                <com.usemenu.MenuAndroidApplication.views.MenuTextView
                    android:id="@+id/tv1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/menu_main_orange"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.usemenu.MenuAndroidApplication.views.MenuTextView
                    android:id="@+id/textviewMealDetailsActivityOrderLargePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv1"
                    android:textColor="@color/menu_main_orange"
                    android:textSize="15sp" />

                <com.usemenu.MenuAndroidApplication.views.CircleButtonView
                    android:id="@+id/circleButtonViewMinusLarge"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@+id/textviewMealDetailsActivityOrderLargeQuantity"
                    android:visibility="invisible" >
                </com.usemenu.MenuAndroidApplication.views.CircleButtonView>

                <com.usemenu.MenuAndroidApplication.views.MenuTextView
                    android:id="@+id/textviewMealDetailsActivityOrderLargeQuantity"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/circleButtonViewPlusLarge"
                    android:gravity="center"
                    android:textColor="@color/menu_main_orange"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <com.usemenu.MenuAndroidApplication.views.CircleButtonView
                    android:id="@+id/circleButtonViewPlusLarge"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible" >
                </com.usemenu.MenuAndroidApplication.views.CircleButtonView>
            </RelativeLayout>

            <View
                android:id="@+id/viewSeparator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/menu_main_divider_color" />

            <RelativeLayout
                android:id="@+id/layoutSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp" >

                <com.usemenu.MenuAndroidApplication.views.MenuTextView
                    android:id="@+id/tv2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/menu_main_gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.usemenu.MenuAndroidApplication.views.MenuTextView
                    android:id="@+id/textviewMealDetailsActivityOrderSmallPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv2"
                    android:textColor="@color/menu_main_gray"
                    android:textSize="15sp" />

                <com.usemenu.MenuAndroidApplication.views.CircleButtonView
                    android:id="@+id/circleButtonViewMinusSmall"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@+id/textviewMealDetailsActivityOrderSmallQuantity"
                    android:visibility="invisible" >
                </com.usemenu.MenuAndroidApplication.views.CircleButtonView>

                <com.usemenu.MenuAndroidApplication.views.MenuTextView
                    android:id="@+id/textviewMealDetailsActivityOrderSmallQuantity"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/circleButtonViewPlusSmall"
                    android:gravity="center"
                    android:textColor="@color/menu_main_gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <com.usemenu.MenuAndroidApplication.views.CircleButtonView
                    android:id="@+id/circleButtonViewPlusSmall"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible" >
                </com.usemenu.MenuAndroidApplication.views.CircleButtonView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:background="@color/menu_main_divider_color" />

            <com.usemenu.MenuAndroidApplication.views.MenuTextView
                android:id="@+id/textviewMealDetailsActivityDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.4"
                android:textColor="@color/menu_main_gray_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <ImageButton
                    android:id="@+id/imagebuttonMealDetailsActivityGetReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:src="@drawable/button_pen_paper_icon" />

                <com.usemenu.MenuAndroidApplication.views.MenuTextView
                    android:id="@+id/textviewMealDetailsActivityReceiptText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imagebuttonMealDetailsActivityGetReceipt"
                    android:lineSpacingMultiplier="1.4"
                    android:textColor="@color/menu_main_gray"
                    android:textSize="12sp" />
            </RelativeLayout>

            <com.usemenu.MenuAndroidApplication.views.MenuTextView
                android:id="@+id/textviewMealDetailsActivityIngridients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:lineSpacingMultiplier="1.4"
                android:textAllCaps="true"
                android:textColor="@color/menu_main_orange"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
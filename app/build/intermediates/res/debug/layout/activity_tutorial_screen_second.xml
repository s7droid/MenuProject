<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <com.usemenu.MenuAndroidApplication.views.MenuTextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.30"
        android:text="@string/tutorial_screen_second"
        android:textColor="@color/menu_main_gray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonuTutorialScreenSecondContinueButton"
        android:layout_below="@+id/tv1"
        android:layout_margin="40dp"
        android:src="@drawable/tutorial_02" />

    <com.usemenu.MenuAndroidApplication.views.MenuButton
        android:id="@+id/buttonuTutorialScreenSecondContinueButton"
        style="@style/Menu_Button_Orange"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="@string/menu_tutorial_screen_button_make_your_choice"
        android:textStyle="bold" />


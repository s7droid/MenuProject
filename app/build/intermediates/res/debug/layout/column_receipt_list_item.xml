<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayoutReceiptListItemContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="10dp" >

    <com.usemenu.MenuAndroidApplication.views.MenuTextView
        android:id="@+id/textviewReceiptListItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/menu_main_gray"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.usemenu.MenuAndroidApplication.views.MenuTextView
        android:id="@+id/textviewReceiptListItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/menu_main_gray"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.usemenu.MenuAndroidApplication.views.MenuTextView
        android:id="@+id/textviewReceiptListItemRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textviewReceiptListItemDate"
        android:layout_marginTop="10dp"
        android:textColor="@color/menu_main_gray_light"
        android:textSize="15sp" />

    <com.usemenu.MenuAndroidApplication.views.MenuButton
        android:id="@+id/buttonReceiptListItemSendMessage"
        style="@style/Menu_Button_Rounded_Orange_With_Selector"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/textviewReceiptListItemRestaurantName"
        android:layout_marginTop="12dp"
        android:text="@string/receipt_send_to_email"
        android:textStyle="bold" />

</RelativeLayout><!-- From: file:/Users/artcode4/git/MenuProject/app/src/main/res/layout/column_receipt_list_item.xml -->
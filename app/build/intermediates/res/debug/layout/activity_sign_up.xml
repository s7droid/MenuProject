<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayoutSignUpActivityContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv1"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_main_divider_color" />

                <com.usemenu.MenuAndroidApplication.views.MenuEditText
                    android:id="@+id/edittextSignUpActivityNameOnCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_in_edittext_shape"
                    android:hint="@string/sign_in_first_name_hint_text"
                    android:inputType="text"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/menu_main_gray"
                    android:textColorHint="@color/menu_main_gray_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_main_divider_color" />

                <com.usemenu.MenuAndroidApplication.views.MenuEditText
                    android:id="@+id/edittextSignUpActivityEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_in_edittext_shape"
                    android:hint="@string/sign_in_username_hint_text"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/menu_main_gray"
                    android:textColorHint="@color/menu_main_gray_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_main_divider_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.usemenu.MenuAndroidApplication.views.MenuEditText
                        android:id="@+id/edittextSignUpActivityPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/buttonSignUpActivityHide"
                        android:layout_weight="1"
                        android:background="@drawable/sign_in_edittext_shape"
                        android:hint="@string/sign_in_password_hint_text"
                        android:inputType="textPassword"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="@color/menu_main_gray"
                        android:textColorHint="@color/menu_main_gray_light"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.usemenu.MenuAndroidApplication.views.MenuTextView
                        android:id="@+id/buttonSignUpActivityHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center|right"
                        android:text="@string/sign_up_show_button"
                        android:textColor="@color/menu_main_gray_light"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_main_divider_color" />

                <com.usemenu.MenuAndroidApplication.views.MenuEditText
                    android:id="@+id/edittextSignUpActivityRepeatPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_in_edittext_shape"
                    android:hint="@string/sign_up_repeat_password_hint_text"
                    android:inputType="textPassword"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/menu_main_gray"
                    android:textColorHint="@color/menu_main_gray_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_main_divider_color" />

                <com.usemenu.MenuAndroidApplication.views.MenuTextView
                    android:id="@+id/textviewSignUpScanTermsOfUse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="7dp"
                    android:textColor="@color/menu_main_gray"
                    android:textSize="12sp" />

                <com.usemenu.MenuAndroidApplication.views.MenuButton
                    android:id="@+id/buttonSignUpScanCreditCard"
                    style="@style/Menu_Button_Rounded_Orange_With_Selector"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/sign_up_scan_credit_card_hint_text"
                    android:textStyle="bold" />

                <com.usemenu.MenuAndroidApplication.views.MenuTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/manage_account_fill_in_credit_card_manually"
                    android:textColor="@color/menu_main_gray_light" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_main_divider_color" />

                <com.devmarvel.creditcardentry.library.CreditCardForm
                    android:id="@+id/creditCardForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    app:helper_text_color="@color/menu_main_orange"
                    app:hint_text_color="@color/menu_main_gray_light"
                    app:include_helper="false"
                    app:include_zip="false"
                    app:input_background="@drawable/border_empty"
                    app:text_color="@color/menu_main_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_main_divider_color" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <com.usemenu.MenuAndroidApplication.views.MenuButton
        android:id="@+id/buttonSignUpActivitySignUp"
        style="@style/Menu_Button_Orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/sign_up_button_text"
        android:textStyle="bold" />

</RelativeLayout><!-- From: file:/Users/user/Desktop/Workspace/Android%20Studio/Menu/MenuProject/app/src/main/res/layout/activity_sign_up.xml -->